<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-4">
    <p>
      <strong><%= image_tag(@product.image_url, width: "90%", class: "img-show", class: "thumbnail") %></strong>
      <%= link_to 'Back to Overview', products_path, class: "btn btn-info" %>
    </p>
  </div>
  <div class="col-md-4">
    <p>
      <strong><%= @product.name %></strong>
    </p>
    <p>
      <strong><%= @product.description %></strong>
    </p>
    <p>
      <strong>Colour:</strong>
      <%= @product.colour %>
    </p>
  </div>
  <div class="col-md-4">
    <p class="product-price">
      <strong><span class="glyphicon glyphicon-euro"</span></strong>
      <%= @product.price %>
    </p>
    <div class="product-price">  
      <% if user_signed_in? %>
          <%= form_tag "/payments/create" do %>
            <%= render partial: "shared/stripe_checkout_button" %>
            <%= hidden_field_tag(:product_id, @product.id) %>
      <% end %>
    <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <div class="links">
      <hr>
      <% if signed_in? && current_user.admin? %>
        <%= link_to 'Edit this product', edit_product_path(@product) %>
      <% end %>
      <p>
      <strong>Best comment: </strong>
      <%= @product.highest_rating_comment.try(:body) %> 
    </p>
    <p>
      <strong>And a not so good comment: </strong>
      <%= @product.lowest_rating_comment.try(:body) %>
    </p>
    <p class="stars">Average Rating:<div class="rated" data-score="<%= @product.average_rating %>"></div>
    </p>
    </div>
  </div>
  <div class="col-md-4">
    <%=  render "comments" %>
    <%= will_paginate @comments %>
  </div>
  <div class="col-md-4">
    <% if signed_in? %>
      <%= render "products/new_comment" %>
    <% end %>
  </div>
</div>
</div>

